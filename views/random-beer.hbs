<div id="random-beer" class="card">
    {{#each beer}}
        <img class="card-img-top" src="{{image_url}}" alt={{name}}>
        <div class="card-body">
            <h5>{{name}}</h5>
            <h6>{{tagline}}</h6>
            <p class="card-text">{{description}}</p>
            <div>
                <h6>Food Pairing</h6>
                <ul>
                    {{#each food_pairing}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
            <h6>Brewers Tips:</h6><p>{{brewers_tips}}</p>
        </div>
    {{/each}}
</div>